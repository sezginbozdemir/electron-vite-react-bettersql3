{
  "name": "electron-vite-react-bettersql3",
  "private": true,
  "version": "0.0.1",
  "description": "Minimal Electron + React + Vite desktop app with Drizzle ORM and better-sqlite3.",
  "author": "Sezgin Bozdemir <sezdev@proton.me>",
  "type": "commonjs",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "electron-rebuild && vite",
    "build": "npm run db:generate && tsc -b && vite build && electron-rebuild && electron-builder",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "set ELECTRON_RUN_AS_NODE=true && electron ./node_modules/drizzle-kit/bin.cjs migrate",
    "db:push": "set ELECTRON_RUN_AS_NODE=true && electron ./node_modules/drizzle-kit/bin.cjs push",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-router": "^1.162.9",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.13.5",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.8.3",
    "lucide-react": "^0.575.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.1",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/vite": "^4.2.1",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-table-devtools": "^8.21.3",
    "@tanstack/router-devtools": "^1.162.8",
    "@tanstack/router-plugin": "^1.162.8",
    "@tsconfig/node22": "^22.0.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "globals": "^16.5.0",
    "shadcn": "^3.8.5",
    "tw-animate-css": "^1.4.0",
