{
  "productName": "electron-vite-react",
  "appId": "AppID",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "assets/**/*",
    "dist/**/*",
    "dist-electron/**/*",
    "migrations/**/*",
    ".env"
  ],
  "extraResources": [
    { "from": "migrations", "to": "migrations" },
    { "from": "assets", "to": "assets" }
  ],
  "asarUnpack": [],
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  },
  "linux": {
    "icon": "assets/crow.png"
  },
  "mac": {
    "icon": "assets/crow.png",
    "target": ["dmg"]
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "win": {
    "icon": "assets/crow.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  }
}
